{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["ESNext"],
    "types": ["vite/client", "jest", "node"],
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": ["./src", "tests/**/*"],
  "exclude": ["**/dist", "**/node_modules"]
}
