{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "esnext",
    "lib": ["ESNext"],
    "types": ["vite/client", "node"],
    "sourceMap": false,
    "noEmitOnError": true
  },
  "include": ["src", "tests"],
  "exclude": ["**/dist/**", "**/node_modules/**"]
}
